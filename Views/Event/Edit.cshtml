@{
    ViewData["Title"] = "Edit Event";
}

@model Waitless.Models.Entities.Event;


<h1>Edit Event</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label" for="name">Event Id</label>
        <input type="text" class="form-control" asp-for="EventId" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">Event Name</label>
        <input type="text" class="form-control" asp-for="EventName" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">Initiator Name</label>
        <input type="text" class="form-control" asp-for="Initiator" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">Start Date</label>
        <input type="datetime" class="form-control" asp-for="StartTime" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">End Date</label>
        <input type="datetime" class="form-control" asp-for="EndTime" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">Description</label>
        <textarea class="form-control" asp-for="EventDescription"></textarea>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

</form>

