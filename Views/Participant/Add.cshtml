@model Waitless.Models.DTOs.CreateParticipantViewModel

<h1 class="ms-5 mt-5">Event Registration</h1>
<div class="d-flex flex-row ms-5 mt-2">
    <div class="col-6">
        <form method="post">
            <div class="mt-3">
                <label class="form-label" for="name">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="mt-3">
                <label class="form-label" for="email">Email ID</label>
                <input type="email" class="form-control" asp-for="EmailId" />
            </div>
            <div class="mt-3">
                <label class="form-label" for="phone">Phone Number</label>
                <input type="tel" class="form-control" asp-for="PhoneNumber" />
            </div>
            <input type="hidden" asp-for="EventId" />
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
    <div class="col-4 ms-5">
        <img src="~/images/queue-register.svg" style="width:320px;">
    </div>
</div>
